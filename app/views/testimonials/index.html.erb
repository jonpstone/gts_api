<p id="notice"><%= notice %></p>

<h1>Testimonials</h1>

<table>
  <thead>
    <tr>
      <th>Reviewer first name</th>
      <th>Reviewer last name</th>
      <th>Featured review</th>
      <th>Review</th>
      <th>Review date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @testimonials.each do |testimonial| %>
      <tr>
        <td><%= testimonial.reviewer_first_name %></td>
        <td><%= testimonial.reviewer_last_name %></td>
        <td><%= testimonial.featured_review %></td>
        <td><%= testimonial.review %></td>
        <td><%= testimonial.review_date %></td>
        <td><%= link_to 'Show', testimonial %></td>
        <td><%= link_to 'Edit', edit_testimonial_path(testimonial) %></td>
        <td><%= link_to 'Destroy', testimonial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

